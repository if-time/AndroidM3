<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_view_back_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_view_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_view_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="目标识别结果"
        android:textSize="29sp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/title_view_close_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_view_close_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/back_normal" />
    </LinearLayout>

</RelativeLayout>
